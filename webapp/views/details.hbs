<table cellpadding="5" cellspacing="5" align="center" width="100%">

  <tr>
    <td valign="top" align="right" width="200"><b>Title:</b></td>
    <td valign="top">{{book.title}}</td>
  </tr>

  <tr>
    <td valign="top" align="right"><b>Author:</b></td>
    <td valign="top">{{book.author}}</td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Additional Author:</b></td>
    <td valign="top">{{book.addAuthor}}</td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Call Number:</b></td>
    <td valign="top">{{book.callNo}}</td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Publication Info:</b></td>
    <td valign="top">{{book.pubInfo}}</td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Description:</b></td>
    <td valign="top">{{book.descript}}</td>
  </tr>
  <tr>
    <td valign="top" align="right"><b>Series:</b></td>
    <td valign="top">{{book.series}}</td>
  </tr>
  <tr>
    <td align="right" valign="top"><b>Subject Categories:</b></td>
    <td valign="top">
      {{#each subjects}}
        {{this.subject}} <br />
      {{/each}}
    </td>
  </tr>

</table>
<P>&nbsp;</P>
<form method="get" action="maintain.html" >
  <P>
    <input type="submit" name="maintainBtn" value="maintenance" />
    <input type="hidden" name="bookID" value="{{book.id}}" />
  </P>
</form>
